# Docker Environment Variables
# Copy this to .env.local for Docker usage

# PostgreSQL (automatically configured by docker-compose)
POSTGRES_PASSWORD=metricify_secure_password_2024
DATABASE_URL=postgresql://metricify_user:metricify_secure_password_2024@postgres:5432/metricify

# Spotify OAuth
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# NextAuth
NEXTAUTH_SECRET=your_nextauth_secret_generate_with_openssl
NEXTAUTH_URL=http://localhost:3000

# EDMTrain API
EDMTRAIN_API_KEY=your_edmtrain_api_key_here

# Environment
NODE_ENV=production
